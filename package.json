{
  "name": "personal-todo-manager",
  "version": "1.0.0",
  "description": "Personal Desktop TODO Task Manager",
  "author": "Aun's Task Manager",
  "main": "app/main.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"wait-on http://localhost:3000 && npm run electron\"",
    "server": "cross-env NODE_ENV=development node app/src/server.js",
    "dev": "concurrently \"nodemon app/src/server.js\" \"wait-on http://localhost:3000 && npm run electron-dev\"",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=1 electron .",
    "build": "npm install && npm run build:static",
    "build:static": "echo 'Static files ready for deployment'",
    "vercel-build": "npm install",
    "build-electron": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "test": "jest --config=tests/jest.config.js",
    "test:watch": "jest --config=tests/jest.config.js --watch"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^24.6.4",
    "electron-reload": "^2.0.0-alpha.1",
    "jest": "^29.6.4",
    "mongodb-memory-server": "^8.15.1",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.3",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.personaltaskmanager.app",
    "productName": "Personal Task Manager",
    "directories": {
      "output": "dist/electron"
    },
    "files": [
      "app/main.js",
      "app/src/**/*",
      "app/public/**/*",
      "config/**/*"
    ],
    "extraResources": [
      {
        "from": ".",
        "to": ".",
        "filter": ["package.json"]
      }
    ],
    "win": {
      "target": "portable"
    }
  }
}
